<form class="" action="/register" method="post">
  <div class="form-group">
    <label for="">Full Name:</label>
    <input class="form-control" type="text" name="name" value="" placeholder="Enter Your First Name">
  </div>
  <div class="form-group">
    <label for="">Username:</label>
    <input class="form-control" type="text" name="username" value="" placeholder="Enter Your Username">
  </div>
  <div class="form-group">
    <label for="">Email:</label>
    <input class="form-control" type="email" name="email" value="" placeholder="Email">
  </div>
  <div class="form-group">
    <label for="">Password:</label>
    <input class="form-control" type="text" name="password" value="" placeholder="Enter Password">
  </div>
  <div class="form-group">
    <label for="">Confirm Password:</label>
    <input class="form-control" type="text" name="password2" placeholder="Confirm Password">
  </div>
  <button class="btn btn-primary" type="submit" name="button">Register</button>
  <br>
  Have An Account?<a class="btn btn-default btn-tiny" href="/login">Login Now</a>
</form>
